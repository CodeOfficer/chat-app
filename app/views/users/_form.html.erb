<% form_for @user, :url => account_path do |f| %>
  <%= f.error_messages %>

	<p>
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</p>	

	<p>
		<%= f.label :login %><br/>
		<%= f.text_field :login %>
	</p>	
	
	<p>
		<%= f.label :password, (f.object.new_record? ? nil : "Change password") %><br/>
		<%= f.text_field :password %>
	</p>	
	
	<p>
		<%= f.label :password_confirmation %><br/>
		<%= f.text_field :password_confirmation %>
	</p>	

	<p>
		<%= f.submit %>
	</p>
<% end %>
